# Uniform-distribution-Bernoulli-by-sas-Purchase-data-for-each-specified-regions-
data customer;
length 10 $ 10 age gender $ 2 address $ 6;
 seed = 1234;
 n = 10000;
 do i = 1 to 10000;
 if i <= (n/100)*20 then pre = 'AA';
 else if i <= (n/100)*40 then pre = 'BB';
 else if i <= (n/100)*60 then pre = 'CC';
 else if i <= (n/100)*80 then pre = 'DD';
 else if i <= (n/100)*90 then pre = 'EE';
 else if i <= (n/100)*100 then pre = 'FF';
 id = compress(pre||int(rand('uniform',10000000,99999999)));
 age=rand('uniform',18,85);
 if rand('bernoulli',0.5)=1 then gender='man';
 else gender='woman';
 ziprand=rand('uniform',1,100);
 if ziprand <= 30 then address='seoul';
 else if ziprand <= 50 then address='gyeongido';
 else if ziprand <= 60 then address='gyeongsangdo';
 else if ziprand <= 70 then address='jeonlado';
 else if ziprand <= 80 then address='gangwondo';
 else if ziprand <= 85 then address='chungcheongdo';
 else if ziprand <= 90 then address='busan';
 else if ziprand <= 100 then address='incheon';
 output;
 end;
 keep id age gender address;
 ;
 run;
